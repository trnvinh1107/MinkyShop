@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">Đổi Mật Khẩu</h2>

@if (!String.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert error">
        @TempData["ErrorMessage"]
    </div>
}

@if (!String.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!String.IsNullOrEmpty(TempData["PasswordChanged"] as string))
{
    <div class="alert success">
        Mật khẩu đã được thay đổi thành công.
    </div>
}

<form id="change-password-form" action="@Url.Action("DoiMatKhau")" method="post">
    <div class="form-group">
        <label for="current-password">Mật khẩu hiện tại:</label>
        <input type="password" name="matKhauCu" id="current-password" required />
    </div>
    <div class="form-group">
        <label for="new-password">Mật khẩu mới:</label>
        <input type="password" name="matKhauMoi" id="new-password" required />
    </div>
    <div class="form-group">
        <label for="confirm-new-password">Xác nhận mật khẩu mới:</label>
        <input type="password" name="xacNhanMatKhau" id="confirm-new-password" required />
    </div>
    <button type="submit" class="btn">Đổi Mật Khẩu</button>
</form>

<style>
    .page-title {
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .alert {
        padding: 1rem;
        margin-bottom: 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        text-align: center;
    }

    .error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: bold;
        display: block;
        text-align: center;
    }

    input[type="password"] {
        padding: 0.5rem;
        margin-left: 45%;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
        display: block;
        margin: 0 auto;
    }
</style>
