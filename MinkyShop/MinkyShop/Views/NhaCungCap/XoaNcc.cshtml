@model MinkyShop.Models.Nhacungcap
@{
    ViewData["Title"] = "Xóa nhà cung cấp";
    Layout = "_LayoutAdmin";
}

<h2>XÓA NHÀ CUNG CẤP</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nhà cung cấp:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenNcc)
        </dd>
        <dt>
            Địa chỉ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Diachi)
        </dd>
        <dt>
            Điện thoại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
    </dl>

    <form asp-action="Xacnhanxoa" method="post">
        <input type="hidden" asp-for="MaNcc" />
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-default">Trở về trang quản lý</a>
        </div>
    </form>
</div>
